doctype html
html(lang='en')
    head
        meta(charset='UTF-8')
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        title Project Index
        style.
            body {
                font-family: Arial, sans-serif;
                background-color: #f4f4f4;
                padding: 20px;
            }
            .container {
                background-color: #fff;
                border-radius: 5px;
                padding: 20px;
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            }
            .btn {
                margin-bottom: 10px;
                cursor: pointer;
            }
            .btn-delete {
                background-color: #dc3545; /* Red color */
                color: #fff; /* White text */
                border: none;
            }
    body
        div.container
            if locals.message
                p= locals.message
                hr
            button.btn.btn-primary(onclick="window.location.href='/home'") Home
            hr
            button.btn.btn-primary(onclick="window.location.href='/projects/create'") Create Project
            hr
            h2 Projects:
            each project in projects
                div
                    form(style="display: inline-block; margin-right: 10px;", action=`/projects/${project.id}`, method='GET')
                        button.btn.btn-secondary(type='submit')= project.name
                    form(style="display: inline-block;", action=`/projects/${project.id}?_method=DELETE`, method='POST')
                        button.btn.btn-delete(type='submit') Delete